<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".ThemeActivity">

    <ImageView
        android:id="@+id/ivBackArrowTheme"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/ivBackArrowThemeWhite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/back_arrowwhite" />

    <ImageView
        android:id="@+id/ivregular"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="115dp"
        android:clickable="true"
        app:srcCompat="@drawable/convyregular" />

    <ImageView
        android:id="@+id/ivminimal"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_gravity="end"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:srcCompat="@drawable/convyminimalicon" />

    <ImageView
        android:id="@+id/ivlight"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="335dp"
        android:clickable="true"
        app:srcCompat="@drawable/convylight" />

    <ImageView
        android:id="@+id/ivdarkmint"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_gravity="end"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:srcCompat="@drawable/convydarkmint" />

    <TextView
        android:id="@+id/SelectThemes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Select Theme"
        android:textColor="?attr/textcolor"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/montserrat"
        android:text="regular"
        android:textColor="?attr/textcolor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/minimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/montserrat"
        android:text="minimal"
        android:textColor="?attr/textcolor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="315dp"
        android:fontFamily="@font/montserrat"
        android:text="light"
        android:textColor="?attr/textcolor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/mint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="@font/montserrat"
        android:text="mint"
        android:textColor="?attr/textcolor"
        android:textSize="15dp" />
</FrameLayout>